{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "../src/types.ts"],
  "exclude": ["node_modules", "dist"]
}
